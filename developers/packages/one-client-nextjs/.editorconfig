# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js}]
charset = utf-8
indent_style = space
indent_size = 2

[*.{ts}]
charset = utf-8
indent_style = space
indent_size = 2

[{package.json}]
indent_style = space
indent_size = 2